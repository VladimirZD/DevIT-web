---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';
---
<Base title="DevIT — SQL Server & DevOps">
  <Header />
  <main class="container">
    <section class="hero grid gap-8 md:grid-cols-2 items-center">
      <div class="space-y-6">
        <h1 class="text-4xl md:text-5xl font-bold leading-tight">DevIT — Reliable SQL Server & Cloud-native DevOps</h1>
        <p class="text-white/75 max-w-xl">We help businesses design, operate, and secure data platforms and cloud-native infrastructure using SQL Server, Kubernetes, Nomad, Terraform and modern DevOps.</p>
        <div class="flex items-center gap-4">
          <a href="/contact"><Button variant="solid">Request Consultation</Button></a>
          <a href="/services" class="text-white/80 hover:underline">Our Services</a>
        </div>

        <div class="flex items-center gap-6 mt-6">
          <div class="text-sm text-white/60">Trusted by:</div>
          <div class="flex items-center gap-3">
            <div class="bg-white/5 rounded px-3 py-1 text-white/80">SQL</div>
            <div class="bg-white/5 rounded px-3 py-1 text-white/80">Terraform</div>
            <div class="bg-white/5 rounded px-3 py-1 text-white/80">K8s</div>
          </div>
        </div>
      </div>

      <div class="card fade-up">
        <img src="/src/assets/hero.svg" alt="Infrastructure illustration" class="w-full h-auto" />
      </div>
    </section>

    <section style="margin-top:28px">
      <h2>How we help</h2>
      <div class="grid" style="margin-top:12px">
        <div class="card">
          <h4>Database Modernization</h4>
          <p class="muted">Migration planning, performance tuning, high availability and disaster recovery for SQL Server workloads.</p>
        </div>
        <div class="card">
          <h4>Cloud-Native Platforms</h4>
          <p class="muted">Kubernetes and Nomad platform design, cluster lifecycle, and GitOps practices.</p>
        </div>
        <div class="card">
          <h4>Infrastructure as Code</h4>
          <p class="muted">Repeatable infrastructure with Terraform and secure state management.</p>
        </div>
        <div class="card">
          <h4>DevOps & Observability</h4>
          <p class="muted">CI/CD pipelines, monitoring, and SRE practices to keep systems healthy.</p>
        </div>
      </div>
    </section>

  </main>
  <Footer />
</Base>
