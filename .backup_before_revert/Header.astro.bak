---
import Button from './Button.astro';
---
<header class="sticky top-4 z-40">
  <div class="container flex items-center gap-6 backdrop-blur-md bg-white/3 rounded-xl p-3">
    <a href="/" class="flex items-center gap-3 no-underline">
      <img src="/src/assets/logo.jpg" alt="DevIT logo" class="w-10 h-10 rounded-md object-cover" />
      <div>
        <div class="font-semibold text-white">DevIT</div>
        <div class="text-sm text-white/70">SQL Server · DevOps · Terraform</div>
      </div>
    </a>

    <nav class="ml-auto flex items-center gap-6">
      <a href="/" class="text-white/80 hover:text-white">Home</a>
      <a href="/services" class="text-white/80 hover:text-white">Services</a>
      <a href="/about" class="text-white/80 hover:text-white">About</a>
      <a href="/contact" class="text-white/80 hover:text-white">Contact</a>
      <a href="/contact" class="ml-4"><Button variant="solid">Request Consultation</Button></a>
    </nav>
  </div>
</header>
